.ui.grid
  .two.wide.mobile.column
    %a{href: "#{candidate.cadastre_path(current_cadastre.id)}"}
      %i.big.arrow.left.icon
  .thirteen.wide.mobile.column.text-center
    .title-header
      Registro de IPTU
.big.divider
.ui.container
  - if @iptus.present?
    - @iptus.each_with_index do |iptu, i|
      .ui.styled.accordion
        %div{ class: i == 0 ? 'title active' : 'title'}
          %i.dropdown.icon
          = iptu.address rescue nil
        %div{ class: i == 0 ? 'content active' : 'content'}
          %table.ui.celled.table
            %tbody
              %tr
                %td
                  .ui.list
                    .item
                      %a.header
                        Cidade
                      .description
                        = iptu.city
              %tr
                %td
                  .ui.list
                    .item
                      %a.header
                        Nº da Inscrição
                      .description
                        = iptu.registration rescue nil
  - else
    .column
      .ui.segment
        %i Nenhum ocorrência encontrada.

:javascript
  $('.accordion')
    .accordion({
      selector: {
        trigger: '.title .icon'
      }
    });
