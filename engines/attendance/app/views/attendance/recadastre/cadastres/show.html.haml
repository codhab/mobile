.ui.grid
  .two.wide.mobile.column
    %a{href: "#{recadastre_ticket_contexts_path}"}
      %i.big.arrow.left.icon
  .thirteen.wide.mobile.column.text-center
    .title-header Atualização de Dados
    .sub-title Verificação de Dados Básicos

.big-divider
.ui.grid.container
  .column.content-form
    - if @context.finalizado?
      .text-center
        %h3 Seus dados básicos estão confirmados.
        %i.ui.icon.green.check.huge
        .big-divider
    - if @context.em_análise?
      .text-center
        %h3 Seus dados foram atualizados com sucesso!
        %i.ui.icon.green.check.huge
        .big-divider
    = render 'disable_form'
