= simple_form_for @dependent, url: @dependent.new_record? ? custom_custom_ticket_custom_dependents_path(@ticket) : custom_custom_ticket_custom_dependent_path(@ticket, @dependent), method: @dependent.new_record? ? 'post' : 'put'  do |f|
  = f.input :name, label: 'Nome', input_html: { disabled: true, disabled: (!@dependent.new_record? &&  f.object.kinship_id == 6)}
  = f.input :cpf, label: 'CPF', input_html: { class: 'cpf', disabled: (!@dependent.new_record? &&  f.object.kinship_id == 6)}
  = f.input :rg, label: "RG"
  = f.input :rg_org, label: "RG ORG"
  = f.input :born, label: "Data de nascimento", as: :string, input_html: { class: 'date', value: f.object.born.present? ? localize(f.object.born) : nil }
  = f.association :kinship, label: "Parentesco", include_blank: false, selected: f.object.kinship_id.present? ? f.object.kinship_id : 3, input_html: { disabled: (!@dependent.new_record? &&  f.object.kinship_id == 6) }
  = f.input :special_condition_id, label: "Condição especial?", as: :select, collection: {"Sim": 1, "Não": 2}, include_blank: false, include_blank: false
  = f.input :special_condition_type_id, label: "Tipo de condição especial", as: :select,collection: Core::Candidate::SpecialConditionType.all, include_blank: "Selecione...", selected: 2
  = f.input :cid
  .big-divider
  = f.submit "Salvar dados e ir para documentações", class: 'ui button yellow fluid', data: { disable_with: 'Carregando, aguarde...'}
