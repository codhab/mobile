= simple_form_for @cadastre_mirror, url: @ticket.input_disabled?(@action) ? "#" : ticket_contact_path(@ticket, @cadastre_mirror), method: :put, validate: true do |f|
  = f.input :telephone, input_html: { class: 'phone'}
  = f.input :telephone_optional, input_html: { class: 'phone'}
  = f.input :celphone, input_html: { class: 'phone'}
  = f.input :email
  = f.input :address
  = f.association :city, include_blank: false, collection: Core::Address::City.federal_district
  = f.association :state, include_blank: false, label_method: :acronym
  = f.input :cep, input_html: { class: 'cep'}
  .big-divider
  .column.text-center
    - if @ticket.confirmation_required?(@action)
      = link_to "Meus dados est√£o corretos", "#", class: 'ui button green fluid'
      .divider
      = link_to "Atualizar meus dados", ticket_open_path(@ticket, @action), class: 'ui button yellow fluid'
    - elsif @ticket.open?(@action)
      .divider
      = f.submit "Salvar dados", class: "ui button green fluid"