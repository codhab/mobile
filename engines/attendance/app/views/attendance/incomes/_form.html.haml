= simple_form_for @cadastre_mirror, url: "#", method: :put, validate: true do |f|
  = f.input :main_income, input_html: { class: 'coin'}

  = f.simple_fields_for :dependent_mirrors do |nested|
    %b= nested.label nested.object.name.titleize 
    = nested.input :income, label: false, input_html: { class: 'coin'}

  .big-divider
  .column.text-center
    - if @ticket.confirmation_required?
      = link_to "Meus dados est√£o corretos", "#", class: 'ui button green fluid'
      .divider
      = link_to "Atualizar meus dados", "#", class: 'ui button yellow fluid'
    - else
      .divider
      = f.submit "Salvar dados", class: "ui button green fluid"