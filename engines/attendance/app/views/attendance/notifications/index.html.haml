.big-divider
.ui.grid.container
  .column.text-center
    .title-header 
      Notificações
      %small
        %p= link_to "Retonar para página de atualizações", candidate.root_path

.big-divider
.row
  .column
    %table.ui.celled.table
      %tbody
        - @notifications.order('created_at DESC').each do |notification|
          %tr{class: notification.read ? 'read' : 'not-read'}
            %td
              = link_to notification.title, notification_path(notification)
              %p
                %small= notification.created_at.strftime("%d/%m/%Y - %H:%M")
              