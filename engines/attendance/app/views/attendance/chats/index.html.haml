.big-divider
.ui.grid.container
  .column.text-center
    .title-header
      Meu Chats
      %small
        %p= link_to "Retonar para página de atualizações", candidate.root_path

.big-divider
.row
  .column
    %table.ui.celled.table
      %tbody
        - @chats.order('created_at DESC').each do |chat|
          %tr{class: chat.closed ? 'read' : 'not-read'}
            %td
              = link_to chat.chat_category.name, chat_path(chat)
              %br
              %p
                %small= "Quantidade de interações: #{chat.chat_comments.count}"
                %br
                %small= chat.created_at.strftime("%d/%m/%Y - %H:%M")
