.ui.grid
  .one.wide.mobile.column
    %a{href: "#{chats_path}"}
      %i.big.arrow.left.icon
  .thirteen.wide.mobile.column.text-center
    .title-header
      Minhas Conversas
      - unless @chat.chat_comments.present?
        %br
        %br
        = link_to "Novo comentário", new_chat_chat_comment_path(@chat), class: 'ui button yellow fluid'
      - else
        - if @chat.allow_comment?
          %br
          %br
          = link_to "Novo comentário", new_chat_chat_comment_path(@chat), class: 'ui button yellow fluid'
.ui.container-fluid
  .ui.grid
    .row
      .column.segment
        %table.ui.celled.table
          %tbody
            %tr
              %td
                %p
                  = "Conversa Nº:  #{@chat.id}/#{@chat.created_at.year}"
                  %br
                  = @chat.chat_category.name rescue nil
                  = @chat.created_at.strftime("%d/%m/%Y - %H:%M")
            - if @chat.closed
              %tr
                %td
                  %a.ui.red.ribbon.label
                    Conversa encerrada
                  %p
                    = @chat.close_comment
    .divider
    .row
      .column.segment
        %table.ui.celled.table
          %tbody
            - @chat.chat_comments.order('created_at DESC').each do |comment|
              %tr
                %td
                  %small
                    - if comment.staff_id.present?
                      %a.ui.yellow.ribbon.label
                        CODHAB
                    - else
                      %a.ui.green.ribbon.label
                        Eu
                  %p
                    %small
                      .ui.label
                        = comment.created_at.strftime("%d/%m/%Y - %H:%M")
                    -if comment.chat_uploads.present?
                      %p
                      - comment.chat_uploads.each do |arq|
                        %i
                          = link_to '<i class="attach icon large"></i>'.html_safe , arq.document_url, target: '_blank'
                  %p{style: 'text-align: justify'}
                    = comment.content
