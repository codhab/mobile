= simple_form_for chat_chat_comments_path(@chat,@chat_comment) do |f|
  = f.input :content, as: :text, label: false, input_html: { placeholder: 'Escreva aqui', rows: 3}
  .big-divider
  .column.text-center
    = f.submit "Enviar", class: 'ui button yellow'
    = link_to "Cancelar", chats_path, class: 'ui button gray'
