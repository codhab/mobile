.ui.grid
  .two.wide.mobile.column
    %a{href: "#{entity.root_path}"}
      %i.big.arrow.left.icon
  .thirteen.wide.mobile.column.text-center
    .title-header #{@form.name}
    .sub-title #{@form.description}
.ui.grid.container
  .column.content-form{style: 'text-align: center'}
    %p
      %h1 
        %i.icon.checkmark.huge.green
    .ui.message.success.text-center
      %b O question√°rio foi respondido com sucesso!
.ui.grid.container
  .column.content-form
    %table.ui.celled.table
      %tbody.black
        - @form.form_fields.where(allow: true).each do |field|
          %tr
            %td
            %td
              %b= field.label
              %br/
              - if field._file?
                Foto enviada
              - else
                = @form_value.store[field.name].humanize
    
    
.ui.grid.container
  .column.content-form
    = link_to "Editar dados enviados", edit_form_path(@form_value), class: 'ui button blue fluid'