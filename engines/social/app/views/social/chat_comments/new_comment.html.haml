.ui.grid
  .two.wide.mobile.column
    %a{href: "#{chats_path}"}
      %i.big.arrow.left.icon
  .thirteen.wide.mobile.column.text-center
    .title-header
      Novo coment√°rio
.big-divider
.ui.grid.container
  .column.content-form
    = simple_form_for @chat_comment, url: create_comment_path(chat_id: @chat) do |f|
      = f.input :content, as: :text, label: false, input_html: { placeholder: 'Escreva aqui', rows: 3}
      = f.simple_fields_for :chat_uploads do |builder|
        = render 'chat_upload_fields', f: builder
      = link_to_add_fields "Adicionar arquivo", f, :chat_uploads
      .big-divider
      .column.text-center
        = f.submit "Enviar", class: 'ui button yellow fluid'
