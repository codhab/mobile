= simple_form_for @voi_activity do |f|
  = f.input :activity_type_id, as: :select, collection: Core::Healty::VoiActivityType.all,label:'Tipo de Atividade', prompt: 'Selecione'
  = f.input :description,label:'Descrição', input_html: { rows: 2 }
  .big-divider
  .column.text-center
    = f.submit "Salvar dados", class: "ui button green fluid"
